<html>
<head>
  <link rel="apple-touch-icon" href="apple-icon.png">
  <link rel="shortcut icon" href="favicon.ico">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>

<body>
    <!-- Left Panel -->
    <%= render "layouts/left_panel" %>
    <!-- Left Panel -->

    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <%= render "layouts/header" %>
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>My Cars</h1>
                    </div>
                </div>
            </div>

            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">GotCrash</a></li>
                            <li class="active">My Cars</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                  <div class="col-lg-12">
            <div class="card">

              <div class="card-body">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Make</th>
                      <th>Model</th>
                      <th>Color</th>
                      <th>Year</th>
                      <th>Vin</th>
                      <th>licence</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @cars.each do |car| %>
                      <tr>
                        <td><%= car.make %></td>
                        <td><%= car.model %></td>
                        <td><%= car.color %></td>
                        <td><%= car.year %></td>
                        <td><%= car.vin %></td>
                        <td><%= car.licence %></td>
                        <td><%= link_to 'Show', car %></td>
                        <td><%= link_to 'Edit', edit_car_path(car) %></td>
                        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Delete this car?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <br>
                <%= link_to 'New Car', new_car_path, class: "btn btn-primary" %>

              </div>
            </div>
          </div>
        </div>
    </div><!-- /#right-panel -->
</body>

<script type="text/javascript">
  $(function(){
    $(".navbar-nav>li").eq(1).addClass("active");
  });
</script>

</html>
