<html>
<head>
<link rel="apple-touch-icon" href="apple-icon.png">
<link rel="shortcut icon" href="favicon.ico">
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

<%= stylesheet_link_tag "admin.css" %>
<%= javascript_include_tag "admin.js" %>
</head>

<body>
    <%= render "layouts/left_panel" %>
    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">


        <%= render "layouts/header" %>
        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>My Profile</h1>
                    </div>
                </div>
            </div>




            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">GotCrash</a></li>

                            <li class="active">My Reviews</li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content mt-3">
            <div class="animated fadeIn">
            <div class="row">
            <div class="col-lg-11">
            <div class="card">


<table class="table table-striped">
  <thead>
    <tr>
      <th>Report ID</th>
      <th>Auto Shopper ID</th>
      <th>Rating</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.report_id %></td>
        <td><%= review.fixer_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.description %></td>

        <td><%= link_to 'Show', review %></td>
      </tr>
    <% end %>
  </tbody>
</table>

      </div>
    </div><!-- /#right-panel -->
    <script type="text/javascript">
      $(function(){
        $(".navbar-nav>li").eq(2).addClass("active");
      });
    </script>
</html>
