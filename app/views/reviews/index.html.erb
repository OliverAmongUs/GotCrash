<table class="table table-striped">
  <thead>
    <tr>
      <th>Report ID</th>
      <th>Auto Shopper ID</th>
      <th>Rating</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.report_id %></td>
        <td><%= review.fixer_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.description %></td>

        <td><%= link_to 'Show', review %></td>
      </tr>
    <% end %>
  </tbody>
</table>
