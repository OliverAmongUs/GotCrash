<p id="notice"><%= notice %></p>

<p>
  <strong>Car:</strong>
  <%= Car.find(@report.car_id).licence %>
</p>

<p>
  <strong>Address:</strong>
  <%= @report.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @report.description %>
</p>

<p>
  <strong>Privacy:</strong>
  <% if @report.privacy = 0 %> Public
  <% else %> Private <% end %>
</p>

<p>
  <strong>Completed:</strong>
  <% if @report.completed = 0 %> No
  <% else %> Yes <% end %>
</p>

<%= image_tag @report.picture_url_url.to_s %>

<p>
  <strong>Bids received:</strong>
</p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td>Bid # <%= bid.id %></td>
        <td>Description: <%= bid.description %></td>
        <td>By fixer #<%= bid.fixer_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div style="display:block">
<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %> |

<%= link_to 'Log Out', logout_path %>
</div>
