<html>
<head>
<link rel="apple-touch-icon" href="apple-icon.png">
<link rel="shortcut icon" href="favicon.ico">
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

<%= stylesheet_link_tag "admin.css" %>
<%= javascript_include_tag "admin.js" %>
</head>

<body>
    <!-- Left Panel -->
    <%= render "layouts/left_panel" %>
    <!-- Left Panel -->

    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <%= render "layouts/header" %>
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>My Reports</h1>
                    </div>
                </div>
            </div>

            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">GotCrash</a></li>
                            <li class="active">My Reports</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

            <div class="card">

              <div class="container">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Car</th>
                      <th>Address</th>
                      <th>Description</th>
                      <th>Privacy</th>
                      <th>Completed</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @reports.each do |report| %>
                      <tr>
                        <td><%= Car.find(report.car_id).licence %></td>
                        <td><%= report.address %></td>
                        <td><%= report.description %></td>
                        <td><%if report.privacy == 0 %> Public <% else %> Private <% end %></td>
                        <td><%if report.completed == 0 %> No <% else %> Yes <% end %></td>
                        <td><%= link_to 'Show', report %></td>
                        <td><%= link_to 'Edit', edit_report_path(report) %></td>
                        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <br>

                <%= link_to 'New Report', new_report_path, class: "btn btn-primary" %>
              </div>
            </div>
    </div><!-- /#right-panel -->
  </body>

  <script type="text/javascript">
    $(function(){
      $(".navbar-nav>li").eq(2).addClass("active");
    });
  </script>
</html>
