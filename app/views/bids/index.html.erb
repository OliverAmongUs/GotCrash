<html>
<head>
<link rel="apple-touch-icon" href="apple-icon.png">
<link rel="shortcut icon" href="favicon.ico">
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>

<body>
    <%= render "layouts/left_panel" %>
    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">


        <%= render "layouts/header" %>
        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <!-- <div class="page-title"> -->
                        <h1 style="display: inline-block;">My Estimates</h1>
                        <select name="select" id="select" class="form-control select" onchange="changeTable(this.options[this.options.selectedIndex].value)">
                            <option value="0">All</option>
                            <option value="1">Marked</option>
                            <option value="2">Ignored</option>
                        </select>
                    <!-- </div> -->
                </div>
            </div>




            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">GotCrash</a></li>

                            <li class="active">My Estimates</li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content mt-3">
            <div class="animated fadeIn">
            <div class="row">
            <div class="col-lg-11">
            <div class="card" id="bid_table">
              <%= render partial: 'bidTable', locals: {bids: @bids, report: @report} %>
            </div>
            </div>
            </div>
            </div>
            <%= link_to 'Create a new Estimate', choosereport_path, class:"btn btn-primary" %>

        </div>
    </div><!-- /#right-panel -->
    <script type="text/javascript">
      $(function(){
        $(".navbar-nav>li").eq(1).addClass("active");
      });

      function changeTable(value) {
        // alert(value);
          $.ajax({
            method: 'Post',
            url: '/search_bid',
            data: { value: value},
          });
      };
    </script>
</html>
