<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td>Bid number <%= bid.id %></td>
        <td>Created at: <%= bid.created_at %></td>
        <td>Updated at: <%= bid.updated_at %></td>
        <td><%= link_to 'Show', fixer_bid_path(current_user,bid) %></td>
        <td><%= link_to 'Edit', edit_fixer_bid_path(current_user,bid) %></td>
        <td><%= link_to 'Destroy', fixer_bids_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

