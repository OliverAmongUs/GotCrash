<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td>Bid # <%= bid.id %></td>
        <td>Created at: <%= bid.created_at %></td>
        <td>Updated at: <%= bid.updated_at %></td>
        <td><%= link_to 'Edit', edit_fixer_bid_path(current_user,bid) %></td>
        <td><%= link_to 'Finish Bid', fixer_bid_path(current_user,bid), method: :delete, data: {confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Conversation', fixer_bid_messages_path(current_user,bid) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<%= link_to 'New Bid', choosereport_path %>
</br>
<%= link_to 'Back', fixer_path(current_user) %>
