<html>
<head>
<link rel="apple-touch-icon" href="apple-icon.png">
<link rel="shortcut icon" href="favicon.ico">
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

<%= stylesheet_link_tag "admin.css" %>
<%= javascript_include_tag "admin.js" %>
</head>

<body>
    <%= render "layouts/left_panel" %>
    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">


        <%= render "layouts/header" %>
        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>My Bids</h1>
                    </div>
                </div>
            </div>




            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">GotCrash</a></li>

                            <li class="active">My Bids</li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content mt-3">
            <div class="animated fadeIn">
            <div class="row">
            <div class="col-lg-11">
            <div class="card">


            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Bid</th>
                  <th>Create Time</th>
                  <th>Update Time</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @bids.each do |bid| %>
                  <tr>
                    <td><%= bid.id %></td>
                    <td><%= bid.created_at %></td>
                    <td><%= bid.updated_at %></td>
                    <td><%= link_to 'Show', fixer_bid_path(current_user,bid) %></td>

                    <td><%= link_to 'Finish Bid', fixer_bid_path(current_user,bid), method: :delete, data: {confirm: 'Are you sure?' } %></td>

                    <td><%= link_to 'Conversation', fixer_bid_messages_path(current_user,bid) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>


            </div>
            </div>
            </div>
            </div>
            <%= link_to 'Create a new bid', choosereport_path, class:"btn btn-primary" %>

        </div>
    </div><!-- /#right-panel -->
    <script type="text/javascript">
      $(function(){
        $(".navbar-nav>li").eq(1).addClass("active");
      });
    </script>
</html>
