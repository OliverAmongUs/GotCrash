<html>
<head>
<link rel="apple-touch-icon" href="apple-icon.png">
<link rel="shortcut icon" href="favicon.ico">
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

<%= stylesheet_link_tag "admin.css" %>
<%= javascript_include_tag "admin.js" %>
</head>

<body>
    <!-- Left Panel -->
    <%= render "layouts/left_panel" %>
    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <%= render "layouts/header" %>
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Editing Bid #<%=@bid.id%></h1>
                    </div>
                </div>
            </div>

            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/">GotCrash</a></li>
                            <li><a href="<%=fixer_bids_path(current_user)%>">My Bids</a></li>
                            <li class="active">#<%=@bid.id%></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
            <div class="row">
            <div class="col-lg-10">
            <div class="card">
              <div class="card-body card-block">
                <div class="col-lg-12">
                <%= form_with url: fixer_bid_path do |form| %>
                  <% if @bid.errors.any? %>
                  wenbo
                    <div id="error_explanation">
                      <h2><%= pluralize(@bid.errors.count, "error") %> prohibited this user from being saved:</h2>

                      <ul>
                      <% @car.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="form-group row form_part">
                    <%= form.label "Bid description:" %>
                    <%= form.text_area :description, class: "col-sm-2 form-control text-area", rows: 5 %>
                  </div>

                  <div class="form-group row form_part">
                    <%= form.label "Estimated cost:" %>
                    <div class="input-group">
                      <div class="input-group-addon"><i class="fa fa-usd fa-xs"></i></div>
                      <%= form.text_field :cost, class: "col-sm-2 form-control", onkeyup:"onlyNum(this)", onblur:"return0(this)"  %>
                    </div>
                  </div>
                  </div>

                  <div class="col-lg-4">
                    <%= form.submit "Update", class: "btn btn-danger", style: "margin-left:-5px" %>
                  </div>
                  <div class="col-lg-4 col-lg-offset-4">
                    <%= link_to 'Back', fixer_bids_path(current_user), class: "btn btn-primary", style: "width:100px; margin-left:170px" %>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
        </div>
        </div>



<script type="text/javascript">
  $(function(){
    $(".navbar-nav>li").eq(2).addClass("active");
  });
</script>
</html>
