<table class="table table-striped">
  <thead>
    <tr>
      <th>Estimate ID</th>
      <th>Report Description</th>
      <th>Last Updated Time</th>
      <th>Marked?</th>
      <th>Ignored?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% bids.each do |bid| %>
      <tr>
        <td><%= bid.id %></td>
        <td><%= Report.find(bid.report_id).description %></td>
        <td><%= bid.updated_at %></td>
        <td><% if bid.marked == 0 %>
          No
          <% else  %>
          Yes
          <% end %></td>
        <td><% if bid.ignored == 0 %>
          No
          <% else  %>
          Yes
          <% end %></td>
        <td><%= link_to 'Show', fixer_bid_path(current_user,bid) %></td>
        <td><%= link_to 'Conversation', fixer_bid_messages_path(current_user,bid) %></td>



      </tr>
    <% end %>
  </tbody>
</table>
