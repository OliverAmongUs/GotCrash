
<%= simple_form_for @profile, path: 'profiles_path' do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, label: 'Your username please', error: 'Username is mandatory, please specify one'%>

  <%= f.input :email, inline_label: 'Yes, remember me' %>

  <%= f.input :address %>

  <%= f.input :phone %>


  <%= f.input :type, as: :radio_buttons, collection: [['0', 'owner'], ['1', 'fixer']], label_method: :second, value_method: :first %>

  <%= f.button :submit, "Save Change", class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
